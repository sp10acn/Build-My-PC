<UserControl x:Class="Build_My_PC.SearchResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Build_My_PC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="25">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="lblTitle" Content="Title"/>
            <Label x:Name="lblPrice" Content="Price" FontWeight="Bold"/>
            <Label x:Name="lblStores" Content="Stores"/>
            <TextBlock VerticalAlignment="Center">           
                <Hyperlink x:Name="hlLink" NavigateUri="http://www.google.com" RequestNavigate="Hyperlink_RequestNavigate">
                    Click here
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
